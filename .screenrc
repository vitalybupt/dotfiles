vbell off
escape ^Zz

# huge scrollback buffer
defscrollback 50000

# status bar
hardstatus on
hardstatus alwayslastline "%{rk}%H %{gk}%c %{yk}%M%d %{wk}%?%-Lw%?%{bw}%n*%f %t%?(%u)%?%{wk}%?%+Lw%?"

# 256 colors
attrcolor b ".I"
termcapinfo xterm 'Co#256:AB=\E[48;5;%dm:AF=\E[38;5;%dm'
term screen-256color-bce
defbce on

screen -t build
screen -t ntf
screen -t console
screen -t weechat screen 'weechat'
screen -t mutt screen 'mutt'
